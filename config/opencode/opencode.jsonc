{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "gruvbox",
  "model": "copilot/gemini-3-pro",
  "autoupdate": true,
  "keybinds": {
    "app_exit": "ctrl+q"
  },
  "permission": {
    "bash": {
      "git *": "allow",
      "rm *": "ask",
      "grep *": "allow"
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coder:latest": {
          "name": "qwen3-coder:latest",
          "reasoning": true,
          "tools": true
        }
      }
    }
  }
}
