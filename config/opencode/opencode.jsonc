{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "model": "copilot/gpt-5.2",
  "autoupdate": true,
  "keybinds": {
    "app_exit": "ctrl+q"
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",

      // Safe / read-only commands
      "ls*": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git rev-parse*": "allow",
      "git branch --show-current": "allow",
      "git branch -vv": "allow",
      "git remote -v": "allow",
      "grep *": "allow",
      "rg *": "allow",

      // Copy is safe when it won't overwrite
      "cp -n*": "allow",
      "cp --no-clobber*": "allow",

      // Explicitly keep destructive commands gated
      "rm *": "ask"
    }
  },
  "provider": {
    "ollama_local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coder:latest": {
          "name": "qwen3-coder:latest",
          "reasoning": true,
          "tools": true
        }
      }
    },
    "ollama_spark": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (Spark)",
      "options": {
        "baseURL": "http://10.23.0.111:11434/v1"
      },
      "models": {
        "qwen3-next:latest": {
          "name": "qwen3-next:opt",
          "reasoning": true,
          "reasoningEffort": "low",
          "tools": true
        },
        "qwen3-coder:30b": {
          "name": "qwen3-coder:latest",
          "reasoning": true,
          "tools": true
        },
        "qwen3-coder-next:q8_0": {
          "name": "qwen3-coder-next:q8_0",
          "tools": true
        },
        "gpt-oss:120b-opt": {
          "name": "GPT-OSS",
          "reasoning": true,
          "reasoningEffort": "low",
          "tools": true
        }
      }
    }
  }
}
